.slide {
	background-color: #0F385F;
  
  height: 358px;
  overflow: hidden;
  position: relative;
  width: 400px;

  h2{
 		color: #FFFFFF;
    font-weight: bold;
    line-height: 22px;
    padding: 8px 16px;
    z-index: 1;  	
    font-size: 18px;
    font-weight: bold;
    letter-spacing: -0.25px;
    margin-bottom: 8px;
    margin-right: 4px;
    position: relative;
  }
}
#slides {
    .slides_container {
      width:400px;
      height:330px;
      div {
        width:400px;
        height:330px;
        display:block;
        a {display:block;height:296px;}
      }
    }
    .pagination {
      margin:10px 0 0 auto;width:80px;
      li {
        float:left;margin: 0 1px; list-style:none;
        a {display:block;width:12px;height:0;padding-top:12px;float:left;overflow:hidden;background-image:url(<%= asset_path 'store/pagination.png' %>);background-position:0 0;}
        &.current a {background-position:0 -12px;}
      }
    }
}
#banners {
    width:758px;height:78px;overflow:hidden;
    .slides_container {
      width:758px;
      height:78px;
      div {
        width:758px;
        height:78px;
        display:block;
      }
    }
} 
