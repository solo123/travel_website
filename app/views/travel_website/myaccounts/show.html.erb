<div>
  <b>Name: </b><%= best_in_place @user_info, :full_name %>
</div>
<div class='my-orders'>
  <b><%= link_to "My Orders", orders_path %></b>
  <br />
  <ul>
    <% current_user.user_info.orders.where('status <= 3').each do |order| %>
      <% if order.schedule %>
      <li><%= link_to order.schedule.tour.description.title, order_path(order) %><br />
        departure: <%= order.schedule.departure_date  %>
      </li>
      <% end %>
    <% end %>
  </ul>
</div>
<ul>
  <li><%= link_to "Change my password", main_app.edit_user_registration_path %></li>
  <li><%#= link_to "Send me Welcome email", test_email_employee_info_path(current_employee) %></li>
</ul>
<br />
<div id='list_telephones'>
  <div>
    <b>Telephones:</b>&nbsp;<%= small_link 'Add', new_telephone_path, :remote => true, :icon => 'gicon-0-19' %>
  </div>
  <% @user_info.telephones.each do |tel| %>
    <%= render :partial => 'travel_website/telephones/row', :object => tel %>
  <% end %>
</div>
<br />
<div id='list_emails'>
  <div>
    <b>Emails:</b>&nbsp;<%= small_link 'Add', new_email_path, :remote => true, :icon => 'gicon-0-19' %>
  </div>
  <% @user_info.emails.each do |email| %>
    <%= render :partial => 'travel_website/emails/row', :object => email %>
  <% end %>
</div>
<br />
<div id='list_addresses'>
  <div>
    <b>Addresses:</b>&nbsp;<%= small_link 'Add', new_address_path, :remote => true, :icon => 'gicon-0-19' %>
  </div>
  <% @user_info.addresses.each do |addr| %>
    <%= render :partial => 'travel_website/addresses/row', :object => addr %>
  <% end %>
</div>

