		<div class='content-block'>
      <h2><%= t 'hot_destinations' %></h2>
			<ul class='list-108'>
			<% Destination.order('updated_at desc').limit(28).each do |d| %>
        <% if d.description %>
          <li><%= link_to d.description.local_title(locale), destination_path(d), :title => d.description.title %></li>
        <% end %>
			<% end %>
        <div class='clear'></div>
			</ul>
		</div>
