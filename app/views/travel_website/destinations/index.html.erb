<%= content_for :head do %>
  <script type='text/javascript'>
    $(function(){
        $('#dest_list').listnav();
        });

</script>
<% end %>
<div class='content-block'>
  <div style='position:relative;'>
    <div id="dest_list-nav" style='margin-top:10px;margin-bottom:10px;'></div>
  </div>
<ul id="dest_list">

  <% @destinations.each do |d| %>
    <% if d.description %>
    <li>
    <a href='<%= destination_path(d) %>'>
      <div class='img-case'>
        <%= image_tag d.title_photo.pic.url(:thumb) if d.title_photo %>
      </div>
      <%= d.description.local_title(locale) %>
    </a>
  </li>
<% end %>
  <% end %>
</ul>
<div class="clear"></div>
</div>
