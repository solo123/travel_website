<div class='login-status'>
  <% if current_user %>
    Welcome <%= link_to current_user.email, myaccount_path if defined? myaccount_path %>,
    &nbsp;
    |
    <%= link_to t(:logout), main_app.destroy_user_session_path, :method => :delete %>

    &nbsp;
    &nbsp;
    <%= image_tag asset_path('store/vm_cart.png'), :width => '25px' %>
    Empty â–¼

  <% else %>
    <%= link_to t(:sign_in), "javascript:show_signin();" %>
    |
    <%= link_to t(:sign_up), '/users/sign_up' %>
    
    <div id='sign_in_popup'>
      <div class='content-block'>
        <h2><%= t(:sign_in) %></h2>
        <div class='popup-close-button'>
          <a href='#' onclick='close_signin();'>x</a>
        </div>
        <table>
          <tr>
            <td>Email: </td><td><input type='text' id='signin_email' /></td>
          </tr>
          <tr>
            <td>Password: </td><td><input type='password' id='signin_psw' /></td>
          </tr>
        </table>
        <p style='margin-top: 4px;'>
          <input type='button' value='Sign in' onclick='sign_in();' />
          <input type='button' value='Cancel' onclick="close_signin();" />
        </p>
        <p style='margin-top:4px;'>
          <a href='/users/sign_in'>Sign up</a> |
          <a href='/users/password/new'>Forgot your password?</a>
        </p>
      </div>
    </div>
  <% end %>

  <%= link_to( t('.lang'), "javascript:change_language('#{locale}');", :class => 'lang') %>
</div>

